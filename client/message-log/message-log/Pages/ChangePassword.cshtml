@page
@model ChangePasswordModel
@{
}

@if (!String.IsNullOrEmpty(this.Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
  @this.Model.ErrorMessage
</div>
}

@if (!String.IsNullOrEmpty(this.Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
  @this.Model.SuccessMessage
</div>
}

<form method="post">
    <fieldset>
        <legend>
            Changez votre mot de passe
        </legend>

        <div class="form-group">
            <label for="UserName">Nom d'utilisateur</label>
            <input type="text" class="form-control" id="UserName" name="UserName" value="@this.Model.UserName" />
        </div>

        <div class="form-group">
            <label for="OldPassword">Ancien mot de passe</label>
            <input type="password" class="form-control" id="OldPassword" name="OldPassword" value="@this.Model.OldPassword" />
        </div>

        <div class="form-group">
            <label for="NewPassword">Nouveau mot de passe</label>
            <input type="password" class="form-control" id="NewPassword" name="NewPassword" value="@this.Model.NewPassword" />
        </div>

        <div class="form-group">
            <label for="RepeatNewPassword">Encore une fois</label>
            <input type="password" class="form-control" id="RepeatNewPassword" name="RepeatNewPassword" value="@this.Model.RepeatNewPassword" />
        </div>

        <button type="submit" class="btn btn-primary">Changer</button>
    </fieldset>
</form>